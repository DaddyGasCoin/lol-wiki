extends layout

block content
  h1 #{title}
  a.button.update.res.create.home.end(href='/') HOME
  form(method='POST' action='')
    div.form-group
      label(for='name') Resource:
      input#name(type='text', placeholder='Mana,Fire etc' name='name',
      value=(undefined===resource ? '' : resource.name))
    button.submit(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
